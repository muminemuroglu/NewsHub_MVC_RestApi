<header class="shadow-sm bg-white">

  <link rel="stylesheet" href="/css/header.css">

  <div class="bg-light border-bottom py-1">
    <div class="container d-flex justify-content-between align-items-center small">
      <div class="d-flex align-items-center text-secondary fw-medium">
        <span class="badge text-bg-dark me-2 py-1 px-2 fw-bold rounded-0">SON DAKİKA</span>
        <marquee class="text-dark">
          Dolar yükselişini sürdürüyor — Yeni kabine açıklandı — İstanbul’da yoğun yağış bekleniyor
        </marquee>
      </div>
      
      <div class="d-flex align-items-center gap-2">
        <!-- Kullanıcı Giriş Durumuna Göre Giriş/Kullanıcı Adı Gösterme -->
        <% if (isLoggedIn) { %>
          <div class="dropdown">
            <!-- DÜZELTME: Kırmızı zemin, beyaz yazı ve hover efekti eklendi -->
            <button class="btn btn-sm btn-danger fw-semibold px-3 py-1 rounded-pill dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
              <%= user.username %>
            </button>
            <ul class="dropdown-menu  dropdown-menu-end shadow" style="background-color: #F3F2EC;">

  
  <% if (isAdmin) { %>
    <li><a class="dropdown-item" href="/admin">Yönetim Paneli</a></li>
  <% } else { %>
    <li><a class="dropdown-item" href="/dashboard">Dashboard</a></li>
  <% } %>
  
  <li><hr class="dropdown-divider"></li>
  <li><a class="dropdown-item" href="/auth/logout">Çıkış Yap</a></li>
</ul>

          </div>
        <% } else { %>
          <!-- Kullanıcı giriş yapmamışsa bu sabit linkler görünür -->
          <a href="/auth" class="btn btn-sm text-dark fw-semibold p-0 border-0">Giriş</a>
          <a href="/auth/register" class="btn btn-sm btn-danger fw-semibold px-3 py-1">Abone Ol</a>
        <% } %>
      </div>
    </div>
  </div>

  <div class="py-4 border-bottom">
    <div class="container d-flex justify-content-center">
      <a class="text-decoration-none text-center" href="/">
        <img
          src="/images/news-hub-logo.png"
          alt="NewsHub Logo"
          width="80"
          height="80"
          class="mb-2 rounded-circle shadow"
          style="object-fit:cover;"
        />
        <div class="d-flex flex-column lh-sm">
          <span class="fw-bolder display-6 text-danger text-uppercase">NewsHub</span>
          <small class="text-muted fst-italic mt-1">Günün en önemli haberleri, tarafsız bakış açısıyla.</small>
        </div>
      </a>
    </div>
  </div>

  <nav class="navbar navbar-expand-lg navbar-light bg-white py-2 border-bottom">
    <div class="container">
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarNews"
        aria-controls="navbarNews"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNews">
        <ul class="navbar-nav mx-auto mb-2 mb-lg-0 fw-bold text-uppercase text-end">
          <li class="nav-item"><a class="nav-link active text-danger" href="/">Anasayfa</a></li>
          
          <% if (typeof globalCategories !== 'undefined' && globalCategories.length > 0) { %>
            <% globalCategories.forEach(category => { %>
              <!-- Sadece aktif (isactive: true) kategorileri göstermek için kontrol eklendi -->
              <% if (category.isactive) { %> 
                <li class="nav-item">
                  <a class="nav-link" href="/category/<%= category._id %>">
                    <%= category.name %>
                  </a>
                </li>
              <% } %>
            <% }) %>
          <% } else { %>
          <% } %>
          <li class="nav-item"><a class="nav-link" href="/contact">İletişim</a></li>
        </ul>

        <form class="d-flex" role="search" action="/search" method="GET">
  <input
    class="form-control form-control-sm me-2"
    type="search"
    placeholder="Ara..."
    aria-label="Search"
    name="q"  />
  <button class="btn btn-outline-dark btn-sm" type="submit">Ara</button>
</form>
      </div>
    </div>
  </nav>
</header>