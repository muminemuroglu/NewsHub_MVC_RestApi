<!DOCTYPE html>
<html lang="tr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel | <%= pageTitle %></title>
    <%- include('partials/bootstrap') %>
    <link rel="stylesheet" href="/css/admin.css" />
  </head>
  <body>
    <div class="container-fluid">
      <div class="row flex-nowrap">
        <%- include('partials/sidebar') %>
        <div class="col py-3">
          <h2 class="admin-title mb-2"><%= pageTitle %></h2>
          <p class="text-muted">
            Hoş geldin, <%= user ? user.username : 'Admin' %>
          </p>
          <% if (typeof status !== 'undefined' && status) { %>
          <div
            class="alert alert-info alert-dismissible fade show"
            role="alert"
          >
            <%= status %>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="alert"
            ></button>
          </div>
          <% } %>
          <div class="card shadow-sm mb-4 mt-4">
            <div class="card-header bg-danger text-white">
              <h4 class="mb-0">Tüm Yorumlar</h4>
            </div>
            <div class="card-body">
              <% if (comments && comments.length > 0) { %>
              <div class="table-responsive">
                <table class="table table-striped table-bordered align-middle">
                  <thead>
                    <tr>
                      <th>Durum</th>
                      <th>İçerik</th>
                      <th>Yazar</th>
                      <th>Haber</th>
                      <th>Tarih</th>
                      <th>Aksiyonlar</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% comments.forEach(comment => { %>
                    <tr>
                      <td>
                        <% if (comment.isActive) { %>
                        <span class="badge bg-success">Onaylı</span> <% } else {
                        %>
                        <span class="badge bg-warning text-dark">Bekliyor</span>
                        <% } %>
                      </td>
                      <td><%= comment.content.substring(0, 50) %>...</td>
                      <td>
                        <small class="d-block text-muted"
                          ><%= comment.userId.name %></small
                        >
                      </td>
                      <td>
                        <a
                          href="/posts/<%= comment.postId._id %>"
                          target="_blank"
                        >
                          <%= comment.postId.title %>
                        </a>
                      </td>
                      <td>
                        <%= new
                        Date(comment.createdAt).toLocaleDateString('tr-TR') %>
                      </td>
                      <td>
                        <% if (!comment.isActive) { %>
                        <form
                          method="POST"
                          action="/admin/comments/toggle/<%= comment._id %>"
                          class="d-inline"
                        >
                          <input
                            type="hidden"
                            name="targetStatus"
                            value="true"
                          />
                          <button type="submit" class="btn btn-sm btn-success">
                            Onayla
                          </button>
                        </form>
                        <% } else { %>
                        <form
                          method="POST"
                          action="/admin/comments/toggle/<%= comment._id %>"
                          class="d-inline"
                        >
                          <input
                            type="hidden"
                            name="targetStatus"
                            value="false"
                          />
                          <button
                            type="submit"
                            class="btn btn-sm btn-secondary"
                          >
                            Pasif Yap
                          </button>
                        </form>
                        <% } %>
                        <form
                          method="POST"
                          action="/admin/comments/delete/<%= comment._id %>"
                          class="d-inline ms-1"
                        >
                          <button type="submit" class="btn btn-sm btn-danger">
                            Sil
                          </button>
                        </form>
                      </td>
                    </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
              <% } else { %>
              <div class="alert alert-info">
                Henüz sisteme eklenmiş bir yorum bulunmamaktadır.
              </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
